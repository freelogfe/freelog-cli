#!/usr/bin/env node
const program = require('commander')
const chalk = require('chalk')
const path = require('path')
const updateNotifier = require('update-notifier');
const generate = require('../lib/commands/generateor')
const {publish} = require('../lib/commands/publish')
const pkg = require('../package.json')

program
  .version(pkg.version)

/**
 * scaffold to init component
 */
program
  .command('init [target]')
  .description('create a new freelog component project')
  .option('-t, --templatePath [value]', 'init with local template')
  .option('-d, --destPath [value]', 'destination path for generating')
  .action(function (target, options) {
    if (options.templatePath) {
      options.templateTarget = path.resolve(options.templatePath)
    } else if (target) {
      options.templateTarget = target
    }
    generate(options)
  })


/**
 * publish freelog component to freelog assets
 * env: beta/prod
 */
program
  .command('publish [env]')
  .description('publish component to freelog server')
  .option('-t, --type [value]', 'resource type')
  .option('-d, --desc [value]', 'resource name')
  .option('-f, --file [value]', 'resource file path')
  .option('-m, --meta [value]', 'the path of meta config')
  .action(function (env, options) {
    env = env || 'prod'
    publish(options, env)
  })


program.on('--help', () => {
  console.log(`  Usages:
    ${chalk.gray('# publish component to freelog server')}
    $ freelog-cli publish
    ${chalk.gray('# create a new freelog component project')}
    $ freelog-cli init
  `)
})

// error on unknown commands
program.on('command:*', function () {
  console.error('Invalid command: %s\nSee --help for a list of available commands.', program.args.join(' '));
  program.outputHelp();
  checkLatestVersion();
  process.exit(1);
});


process.on('uncaughtException', function (err) {
  console.log(err);
  checkLatestVersion();
});

process.on('unhandledRejection', function (err) {
  console.log(err);
  exit(1)
});

function help() {
  checkLatestVersion();
  program.parse(process.argv)
  if (program.args.length < 1) return program.help()
}


function checkLatestVersion() {
  var notifier = updateNotifier({pkg});
  if (notifier.update) {
    console.log(`Update available: ${notifier.update.latest}`);
  }
}

help()